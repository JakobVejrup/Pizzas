@model Pizzas.Models.Dishes

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this pizza?</h3>
<div>
    <h4>@Model.Title</h4>
    <dl class="row">
        <dt class="col-sm-2">Image URL</dt>
        <dd class="col-sm-10">@Model.ImageURL</dd>
        <dt class="col-sm-2">Price</dt>
        <dd class="col-sm-10">@Model.Price</dd>
    </dl>

    <form method="post" asp-action="Delete" asp-route-id="@Model.Id">
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a href="@Url.Action("Index", "Menu")" class="btn btn-secondary">Back to List</a>
    </form>
</div>

