@model Pizzas.Models.Dishes
@{
    ViewData["Title"] = "Details";
}

<div class="container">
    <div class="d-flex justify-content-center">
        <h3>@Model.Title</h3>
    </div>
    <div class="d-flex justify-content-center">
        <img src="@Model.ImageURL" style="width: 50%" />
    </div>
    <div class="d-flex justify-content-center">
        Ingredients:
        <ul>
            @foreach (var item in Model.DishIngredients)
            {
                <li>
                    @item.Ingredients.Name
                </li>
            }
        </ul>
    </div>
    <a class="btn btn-info" asp-action="Index">Tilbage til Menu</a>
</div>
